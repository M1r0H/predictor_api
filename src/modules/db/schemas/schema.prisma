generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Model {
  id              String         @unique @id @default(uuid())
  name            String // Name of the model
  type            String // Type of the model
  version         String         @default("1.0.0") // Version of the model
  serializedModel String // Serialized model
  supportVector   Json // Support vector
  createdBy       String // User ID or "system"
  createdAt       DateTime       @default(now()) // Date of creation
  updatedAt       DateTime? // Date of last update
  deletedAt       DateTime? // Date of deletion
  trainingData    TrainingData[] // Training data
}

model TrainingData {
  id        String    @unique @id @default(uuid())
  data      Json // Input data (in JSON format)
  labels    Json // Labels (in JSON format)
  modelId   String // Model ID
  createdAt DateTime  @default(now()) // Date of creation
  updatedAt DateTime? // Date of last update
  deletedAt DateTime? // Date of deletion
  model     Model     @relation(fields: [modelId], references: [id])
}
